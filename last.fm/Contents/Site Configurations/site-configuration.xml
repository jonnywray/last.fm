<?xml version="1.0" encoding="UTF-8"?>
<site site="http://.*last.fm" plugin="http://.*last.fm/videoplayer/*/VideoPlayer.swf"
	initialState="playing" version="1.0">

	<crop x="0" y="0" width="340" height="289" />
	
	<state name="playing">
		<event>
			<condition>
				<command name="pause" />
			</condition>
			<action>
				<click x="16" y="-15" />
				<goto state="paused" />
			</action>
		</event>
	</state>

	<state name="paused">
		<event>
			<condition>
				<command name="play" />
			</condition>
			<action>
				<click x="16" y="-15" />
				<goto state="playing" />
			</action>
		</event>
	</state>
</site>
